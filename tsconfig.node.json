{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*", 
    "src/main/**/*.ts", 
    "src/preload/**/*.ts", 
    "src/share/**/*.ts", 
    ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@share/*": [
        "src/share/*"
      ]
    }
  }
}
